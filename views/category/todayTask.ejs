<%- include("../includes/boilerplate.ejs") %>

<button class="back-btn" onclick="window.history.back()">
  <i class="fas fa-arrow-left"></i>
</button>

<div class="data-container">
  <% if (tasks.length > 0) { %> <% tasks.forEach(data => { %>
  <div class="info-card">
    <div class="card-heading">
      <h2 class="data-label" style="font-size: 20px"><%= data.task %></h2>
    </div>
    <div class="detail-section">
      <div class="data-label">
        <i class="fas fa-mobile-alt"></i> &nbsp; DESCRIPTION
      </div>
      <div class="data-content"><%= data.description %></div>
    </div>
    <div class="detail-section">
      <div class="data-label"><i class="fas fa-envelope"></i>&nbsp; DATE</div>
      <div class="data-content"><%= data.createdAt %></div>
    </div>
    <div class="detail-section">
      <div class="data-label">
        <i class="fas fa-user-tag"></i>&nbsp; CATEGORY
      </div>
      <div class="data-content"><%= data.category %></div>
    </div>
    <div class="action-bar">
      <a href="/task/<%= data.id %>/edit" class="card-action edit-action">
        <i class="fas fa-edit"></i>
      </a>
      <form
        method="post"
        action="/task/<%= data.id %>?_method=DELETE"
        style="display: inline"
      >
        <button type="submit" class="card-action delete-action">
          <i class="fas fa-trash"></i>
        </button>
      </form>
    </div>
  </div>
  <% }) %> <% } else { %>
  <div>
    <p style="font-size: 30px; font-family: cursive">
      No tasks created today ðŸ˜…ðŸ˜…
    </p>
    &nbsp;&nbsp;
    <a
      href="/task/new"
      class="create-task-btn"
      style="
        color: rgb(62, 12, 199);
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
          Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue',
          sans-serif;
        display: flex;
        justify-content: center;
      "
      >Create a New Task</a
    >
  </div>
  <% } %>
</div>
