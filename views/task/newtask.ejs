<%- include("../includes/markup.ejs") %>

<body class="body-2">
  <div class="container">
    <div class="text">Add New Task</div>
    <form method="post" action="/task">
      <div class="form-row">
        <div class="input-data">
          <input type="text" name="task" required />
          <div class="underline"></div>
          <label for=""> TASK</label>
        </div>
        <div class="input-data">
          <select name="category" required>
            <option value="low">Home</option>
            <option value="medium">Office</option>
            <option value="high">Personal</option>
            <option value="high">Study</option>
            <option value="high">Entertainment</option>
          </select>
          <div class="underline"></div>
          <label for="">PRIORITY</label>
        </div>
      </div>

      <div class="form-row">
        <div class="input-data new-input-data">
          <input type="date" class="new-startDate" name="startDate" required />
          <div class="underline"></div>
          <label for="">Start Date</label>
        </div>
        <div class="input-data new-input-data">
          <input type="date" name="new-endDate" required />
          <div class="underline"></div>
          <label for="">End Date</label>
        </div>
      </div>
      <div class="form-row">
        <div class="input-data textarea">
          <textarea
            rows="8"
            cols="80"
            name="description"
            required
            minlength="5"
          >
          </textarea>
          <br />
          <div class="underline"></div>
          <label for="">Task Description</label>
          <br />
          <div class="submit-btn-row">
            <button class="submit-btn">SUBMIT</button>
          </div>
        </div>
      </div>
    </form>
  </div>
</body>
